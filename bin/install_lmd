#!/bin/bash
export PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin:$PATH

MYTMPDIR=$(mktemp -dt "$0")
trap "rm -rf $MYTMPDIR" EXIT

cd $MYTMPDIR
yum install cpulimit
cd /usr/bin/
wget https://raw.githubusercontent.com/weltonwe/hostinglimit/master/bin/cpulimit_daemon.sh
cd /etc/init.d/
wget https://raw.githubusercontent.com/weltonwe/hostinglimit/master/bin/cpulimit
chmod 700 /usr/bin/cpulimit_daemon.sh
chown root:root /etc/init.d/cpulimit
chmod +x /etc/init.d/cpulimit
service cpulimit start
service cpulimit status
ervice cpulimit restart
